@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "All Roles";
}

<h1> All Roles</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary"> create new role </a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R=>R.Id)</td>
                <td>@Html.DisplayNameFor(R=>R.Name)</td>
               
                 <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>

        </thead>
        <tbody class="mt-3">
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M=>role.Id) </td>
                    <td>@Html.DisplayFor(M => role.Name) </td>
                   
                    <partial name="ButtonsPartial" model="@role.Id"></partial>

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-danger">
        <p> there is no roles </p>

    </div>
}





