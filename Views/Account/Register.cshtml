

@model Demo.PL.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/__AuthLayout.cshtml";
}
 <div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly"> </div>
		<form asp-action="Register" >
			<input class="text " asp-for="FName" placeholder="First Name " required="">
			<input class="text " asp-for="LName" placeholder="Las Name " required="">

			<input class="text email"  asp-for="Email"  placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree"  class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do you have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section validationScriptSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
