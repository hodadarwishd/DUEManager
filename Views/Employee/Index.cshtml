@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1> All Employees</h1>
<br />
<br />
<a asp-asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E=>E.Name)</td>
                <td>@Html.DisplayNameFor(E => E.Image )</td>

                <td>@Html.DisplayNameFor(E => E.Age)</td>
                <td>@Html.DisplayNameFor(E => E.Address)</td>
                <td>@Html.DisplayNameFor(E => E.Department)</td>

                <td>@Html.DisplayNameFor(E => E.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(E => E.Email)</td>
                <td>@Html.DisplayNameFor(E => E.IsAcctive)</td>
                <td>@Html.DisplayNameFor(E => E.HireDate)</td>

                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>

        </thead>
        <tbody class="mt-3">
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>
                        <img src="/files/images/@employee.ImageName" width="100" class="img-fluid rounded-circle" />

                    </td>
                    <td>@employee.Age</td>

                    <td>@employee.Address</td>
                    <td>@employee.Department?.Name</td>

                    <td>@Html.DisplayFor(M => employee.Email)</td>
                    <td>@Html.DisplayFor(M => employee.Salary)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@Html.DisplayFor(M => employee.IsAcctive)</td>
                    <td>@employee.HireDate</td>

                     <partial name="ButtonsPartial" model="@employee.Id.ToString()"></partial>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-danger">
        <p> there is no employee </p>

    </div>
}


